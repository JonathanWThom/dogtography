<%= render "layouts/errors", :object => @package %>

<%= form_for @package, html: { multipart: true } do |f| %>
  <%= f.label :name  %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :price  %>
  <%= f.number_field :price %>
  <%= f.file_field :image %>
  <%= f.submit %>
<% end %>
